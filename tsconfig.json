{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "dist",
		"module": "commonjs",
		"target": "esnext",
		"lib": ["ES2020", "dom"],
		"sourceMap": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,
		"declarationMap": true,
		"noEmit": false
	},
	"ts-node": {
		"esm": true
	},
	"include": ["src", "__tests__"],
	"exclude": ["node_modules"]
}
